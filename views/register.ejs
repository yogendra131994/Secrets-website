<%- include('partials/header') %>
<div class="jumbotron homeBackgroundProperty container mt-5">
  <h1 class="mainHeadingText"><i class="fas fa-solid fa-mask fa-1x mainHeadingText"></i> Register</h1>
  <br>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="mainHeadingBg card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email" class="homeBackground">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password" class="homeBackground">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
          <a class="btn btn-block btn-social btn-google" style="text-align:center" href="/auth/google" role="button">  <i class="fab fa-google fa-1x"></i>  Sign Up with Google
          </a>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
