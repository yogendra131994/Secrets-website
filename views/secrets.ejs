<%- include('partials/header') %>

<div class="jumbotron text-center homeBackgroundProperty">
  <div class="container-fluid ">
    <i class="fas fa-solid fa-mask fa-6x mainHeadingText"></i>
    <h1 class="display-3 mainHeadingText">You've Discovered Secrets!</h1><br>

<div class="row justify-content-md-center">

    <% userSecret.forEach(function(user) {%>
      <%for (var i=0;i<user.secret.length;i++){%>
<div class="col-sm-12 col-lg-6 col-md-12  mt-4 ">
    <div class="card-body border border-white mainHeadingBg shadow-lg p-3 mb-5  rounded w-100">
      <h5 class="card-text homeBackground" style="font-size:200%" ><%=user.secret[i].usersecret%></h5>
      <hr style="
  margin-top: 1rem;
  margin-bottom: 1rem;
  border: 0;
  border-top: 1px solid white;">
      <p style="font-size:125%; text-align:right"><%=user.secret[i].newPostTime%> | <%=user.secret[i].newPostDateAndDay%></p>
    </div>
      </div>
    <%}%>
  <% }); %>


</div>

</div>

    <hr><br>

    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

